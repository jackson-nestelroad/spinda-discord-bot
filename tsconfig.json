{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "es2018",
            "dom"
        ],
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "compileOnSave": false,
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
}